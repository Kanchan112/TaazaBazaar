  transition: .5s ease;
  opacity: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  text-align: center;
}

.container:hover .image {
  opacity: 0.3;
}
.container:hover .middle {
  opacity: 1;
}

.text {
  background-color: #b48484;
  display: block;
  color: white;
  font-size: 16px;
  padding: 16px 32px;
  text-align: center;
